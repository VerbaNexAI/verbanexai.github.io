   isbn = {9781959429999},
   journal = {17th International Workshop on Semantic Evaluation, SemEval 2023 - Proceedings of the Workshop},
   pages = {1551-1557},
   publisher = {Association for Computational Linguistics},
   title = {UTB-NLP at SemEval-2023 Task 3: Weirdness, Lexical Features for Detecting Categorical Framings, and Persuasion in Online News},
   year = {2023},
}
