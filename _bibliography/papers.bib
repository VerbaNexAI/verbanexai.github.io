   keywords = {Artificial intelligence in agriculture,Convolutional Neural Networks (CNN),Cucumber crops,Disease detection,Transfer learning},
   pages = {156-167},
   publisher = {Springer Science and Business Media Deutschland GmbH},
   title = {Implementation of Convolutional Neural Networks for Automated Disease Detection in Cucumber Crops},
